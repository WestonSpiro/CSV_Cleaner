#!/usr/bin/env python3
#CSV Cleaner
import csv

print("Welcome to the CSV Cleaner!")
print("File name must be 3 letters or more.")
file = input("Please select file to clean: ")

text = open(file, "r")
text = ''.join([i for i in text]).replace("!", "")
text = ''.join([i for i in text]).replace("@", "")
text = ''.join([i for i in text]).replace("#", "")
text = ''.join([i for i in text]).replace("^", "")
text = ''.join([i for i in text]).replace("&", "")
text = ''.join([i for i in text]).replace("*", "")
text = ''.join([i for i in text]).replace("(", "")
text = ''.join([i for i in text]).replace(")", "")
text = ''.join([i for i in text]).replace("[", "")
text = ''.join([i for i in text]).replace("]", "")
text = ''.join([i for i in text]).replace("{", "")
text = ''.join([i for i in text]).replace("}", "")
text = ''.join([i for i in text]).replace("~", "")
text = ''.join([i for i in text]).replace("`", "")
text = ''.join([i for i in text]).replace("'", "")
text = ''.join([i for i in text]).replace(":", "")
text = ''.join([i for i in text]).replace(";", "")
text = ''.join([i for i in text]).replace("<", "")
text = ''.join([i for i in text]).replace(">", "")
text = ''.join([i for i in text]).replace("/", "")
text = ''.join([i for i in text]).replace("\\", "")
text = ''.join([i for i in text]).replace("_", "")
text = ''.join([i for i in text]).replace("|", "")
text = ''.join([i for i in text]).replace('"', '')
text = ''.join([i for i in text]).replace("?", "")
x = open(file[:3] +" " + "Cleaned", "x")
x.writelines(text)
x.close()
